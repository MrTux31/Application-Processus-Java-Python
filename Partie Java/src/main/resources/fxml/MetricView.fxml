<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ordonnancement.ui.controller.MetricController">

    <!-- Zone centrale -->
    <center>
        <StackPane alignment="CENTER">
            <!-- VBox contenant les graphiques -->
            <VBox fx:id="vBoxCharts" spacing="10" alignment="CENTER">
                <HBox spacing="10" alignment="CENTER">
                    <padding>
                        <Insets top="10" right="10" bottom="0" left="10"/>
                    </padding>

                    <!-- Graphique de gauche -->
                    <BarChart fx:id="barChartGauche" title="Comparaison gauche">
                        <xAxis>
                            <CategoryAxis fx:id="xAxisGauche" label="Scénario"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="yAxisGauche" label="Valeur"/>
                        </yAxis>
                    </BarChart>

                    <!-- Graphique de droite -->
                    <BarChart fx:id="barChartDroite" title="Comparaison droite">
                        <xAxis>
                            <CategoryAxis fx:id="xAxisDroite" label="Scénario"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="yAxisDroite" label="Valeur"/>
                        </yAxis>
                    </BarChart>
                </HBox>
            </VBox>

            <!-- Label de message d’erreur ou d’information -->
            <Label fx:id="messageLabel"
                   text="Aucun résultat disponible"
                   visible="false"
                   alignment="CENTER"
                   style="-fx-font-size: 18px; -fx-text-fill: black;"
                   StackPane.alignment="CENTER" />
        </StackPane>
    </center>

    <!-- Bas de la fenêtre : choix des algos -->
    <bottom>
        <HBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Choix pour le graphique de gauche -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Algorithme (graphique gauche)"/>
                <ComboBox fx:id="comboAlgoGauche" prefWidth="150">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="FIFO"/>
                            <String fx:value="ROUND ROBIN"/>
                            <String fx:value="PRIORITE"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>

            <!-- Choix pour le graphique de droite -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="labelAlgoDroite" text="Algorithme (graphique droit)"/>
                <ComboBox fx:id="comboAlgoDroite" prefWidth="150">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="FIFO"/>
                            <String fx:value="ROUND ROBIN"/>
                            <String fx:value="PRIORITE"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>
        </HBox>
    </bottom>
</BorderPane>
