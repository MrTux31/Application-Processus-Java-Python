<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ordonnancement.ui.controller.GanttProcessorController">
   <bottom>
      <HBox alignment="CENTER" spacing="100.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <Label fx:id="labelAlgo" alignment="TOP_CENTER" prefHeight="18.0" prefWidth="71.0" text="Algorithme" />
                  <ComboBox fx:id="algosComboBox" prefWidth="150.0">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin></ComboBox>
               </children>
               <HBox.margin>
                  <Insets bottom="30.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label fx:id="labelCpu" text="CPU" />
                  <ListView fx:id="listViewCpu" focusTraversable="false" prefHeight="73.0" prefWidth="100.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></ListView>
               </children>
               <HBox.margin>
                  <Insets bottom="30.0" />
               </HBox.margin>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets top="15.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ScrollPane fx:id="scrollPane" hbarPolicy="ALWAYS" />
            <Label fx:id="message" alignment="CENTER" contentDisplay="CENTER" visible="false" />
         </children>
      </StackPane>
   </center>
</BorderPane>
