<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ordonnancement.ui.controller.GanttProcessorController">
   <top>
    <HBox alignment="CENTER" style="-fx-background-color: #e0e0e0; -fx-padding: 10; -fx-border-color: #b0b0b0; -fx-border-width: 0 0 1 0;">
        <Label text="Gantt par processeur"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;" />
    </HBox>
</top>

   
   <bottom>
      <HBox alignment="CENTER" spacing="100.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label fx:id="labelCpu" text="CPUs visibles" />
                  <ListView fx:id="listViewCpu" focusTraversable="false" prefHeight="46.0" prefWidth="100.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></ListView>
               </children>
               <HBox.margin>
                  <Insets bottom="10.0" />
               </HBox.margin>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets top="15.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="vBoxGantts" alignment="CENTER" />
            <Label fx:id="message" alignment="CENTER" contentDisplay="CENTER" visible="false" />
         </children>
      </StackPane>
   </center>
</BorderPane>
